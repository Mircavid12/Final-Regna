@model Portfolio
@{
    ViewData["Title"] = "PortfolioDetails";
}

<!-- Main area start -->
<main>
    <!-- Intro section start -->
    <!-- <div id="large-header" class="large-header" style="height: 304px; background-image: url('images/demo-1-bg.jpg');">
      <canvas id="demo-canvas" width="1366" height="304"></canvas>
        <h1 class="main-title">Connect <span class="thin">Three</span></h1>
    </div> -->
    <section id="particle-canvas-portDetails">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 m-0 p-0">
                    <div class="header-content text-center">
                        <canvas id="canvas" class="canvas"></canvas>
                        <h3>Portfolio Details</h3>

                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Intro section end -->
    <!-- Team details section start -->
    <div class="portfolio-details-area mt-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-sm-12 col-xs-12 text-center">
                    <div class="portfolio-details-content ml-50">
                        <h1>@Model.Name</h1>
                        <h5>@Model.Category</h5>
                        @if (Model.PortfolioDetails.Link != null)
                        {
                            <h6><a href="@Model.PortfolioDetails.Link" target="_blank"> Click here to see real Project </a></h6>
                        }
                        <h4 class="mt-5">About</h4>
                        <p>@Model.PortfolioDetails.Description</p>

                    </div>
                </div>
            </div>
            <div class="row">
                @foreach (PortfolioImages pi in Model.PortfolioImages)
                {
                <div class="col-lg-6">
                    <div class="portfolio-images">
                        <img src="~/images/portfolio/@pi.Name" alt="">
                    </div>
                </div>
                }
                
            </div>
            <div class="row">
                <div class="col-lg-12 mt-5">
                    <div class="portfolio-developers text-center">
                        <h4>Developers engaged in this service</h4>
                    </div>
                </div>
            </div>
            <div class="row">
                @foreach (PortfolioDevelopers pd in Model.PortfolioDevelopers)
                {
                    <div class="col-lg-3 portfolios">
                        <div class="portfolio-content text-center">
                            <img src="~/images/team/@pd.Developers.Image" alt="">
                            <h4 class="m-0">@pd.Developers.Name</h4>
                            <span>@pd.Developers.Profession</span>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <!-- Team details section end -->

</main>
<!-- Main area end -->