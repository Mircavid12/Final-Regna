@model RegisterVM
@{
    ViewData["Title"] = "Register";
}

<!-- Main area start -->
<main>
    <!-- Intro section start -->
    <!-- <div id="large-header" class="large-header" style="height: 304px; background-image: url('images/demo-1-bg.jpg');">
      <canvas id="demo-canvas" width="1366" height="304"></canvas>
        <h1 class="main-title">Connect <span class="thin">Three</span></h1>
    </div> -->
    <section id="particle-canvas-register">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 m-0 p-0">
                    <div class="header-content text-center">
                        <canvas id="canvas" class="canvas"></canvas>
                        <h3>Qeydiyyat</h3>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Intro section end -->
    <!-- register - Register area start -->
    <section id="register">
        <div class="register-card">

            <div class="card-title">
                <h1>Qeydiyyat</h1>
            </div>

            <div class="content">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <form method="post">
                    <div class="form-group">
                        <input asp-for="Fullname" id="fullname" type="text" placeholder="Fullname">
                        <span asp-validation-for="Fullname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Username" id="username" type="text" placeholder="Username">
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Email" id="email" type="email" placeholder="Email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Password" id="password" type="password" placeholder="Password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="CheckPassword" id="checkpassword" type="password" placeholder="Check Password">
                        <span asp-validation-for="CheckPassword" class="text-danger"></span>
                    </div>
                    <div class="level options text-center">
                        <a class="btn btn-link" asp-controller="Account" asp-action="Login">Mövcud hesabınız var?</a>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Qeyd ol</button>
                    </div>
                </form>
            </div>
        </div>
    </section>
    <!-- register - Register area end -->

</main>
<!-- Main area end -->