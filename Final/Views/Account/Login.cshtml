    <section id="particle-canvas-login">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 m-0 p-0">
                    <div class="header-content text-center">
                        <canvas id="canvas" class="canvas"></canvas>
                        <h3>Daxil ol</h3>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Intro section end -->
    <!-- Login - Register area start -->
    <section id="login">
        <div class="login-card">

            <div class="card-title">
                <h1>Daxil ol</h1>
            </div>

            <div class="content">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <form method="post">
                    <div class="form-group">
                        <input asp-for="Email" id="email" type="email" placeholder="Email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Password" id="password" type="password" placeholder="Password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="level options text-center">
                        <a class="btn btn-link" asp-controller="Account" asp-action="Register">Qeydiyyat</a>
                    </div>

                    <button type="submit" class="btn btn-primary">Daxil ol</button>
                </form>
            </div>
        </div>
    </section>
    <!-- Login - Register area end -->

</main>
<!-- Main area end -->