@model List<Developers>
@{
    ViewData["Title"] = "Index";
}

<!-- Main area start -->
<main>
    <!-- Intro section start -->
    <section id="particle-canvas-team">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 m-0 p-0">
                    <div class="header-content text-center">
                        <canvas id="canvas" class="canvas"></canvas>
                        <h3>Komandamız</h3>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Intro section end -->
    <!-- Team section start -->
    <section id="team">
        <div class="container">
            <div class="row">
                @foreach (Developers developers in Model)
                {
                    <div class="col-lg-3">
                        <div class="member-content text-center">
                            <a asp-controller="Team" asp-action="TeamDetails" asp-route-id="@developers.Id"><img src="images/team/@developers.Image" alt=""></a>
                            <h4 class="m-0">@developers.Name</h4>
                            <span>@developers.Profession</span>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
    <!-- Team section end -->


</main>
<!-- Main area end -->
