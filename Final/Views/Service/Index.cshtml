@model List<Services>
@{
    ViewData["Title"] = "Index";
}

<!-- Main area start -->
<main>
    <!-- Intro section start -->
    <section id="particle-canvas-services">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 m-0 p-0">
                    <div class="service-header text-center">
                        <canvas id="canvas" class="canvas"></canvas>
                        <h3>Xidmətlər</h3>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Intro section end -->
    <!-- Services section start -->
    <section id="services">
        <div class="container">
            <div class="row">
                @foreach (Services services in Model)
                {
                    <div class="col-lg-4 col-md-6 text-center mt-5">
                        <div class="service-card">
                            <div class="icon mb-3">
                                <a asp-controller="Service" asp-action="ServiceDetails" asp-route-id="@services.Id">
                                    @Html.Raw(services.Icon)
                                </a>
                            </div>
                            <h4>@services.Title</h4>
                            <p>
                                @services.Description
                            </p>
                        </div>
                    </div>
                }
            </div>
            <div class="row text-center mt-5 d-flex justify-content-center" >
                <nav aria-label="...">
                    <ul class="pagination pagination-lg">
                        @for (int i = 1; i <= ViewBag.PageCount; i++)
                        {
                            if (i == ViewBag.page)
                            {
                                <li class="page-item active" aria-current="page">
                                    <span class="page-link">@i</span>
                                </li>
                            }
                            else
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-controller="Service"
                                       asp-action="Index"
                                       asp-route-page="@i">@i</a>
                                </li>
                            }

                        }
                    </ul>
                </nav>
            </div>
        </div>
    </section>
    <!-- Services section end -->

</main>
<!-- Main area end -->