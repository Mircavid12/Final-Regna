@model Apply
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Apply</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                FirstName
                            </th>
                            <th>
                                LastName
                            </th>
                            <th>
                                Service
                            </th>
                            <th>
                                Message
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                @Model.FirstName
                            </td>
                            <td>
                                @Model.LastName
                            </td>
                            <td>
                                @Model.Service
                            </td>
                            <td>
                                @Model.Message
                            </td>
                            <td>
                                <a asp-controller="Apply" asp-action="Detail" asp-route-id="@Model.Id" class="btn btn-secondary">
                                    <i class="mdi mdi-information"></i>
                                </a>
                                <a asp-controller="Apply" asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning">
                                    <i class="mdi mdi-table-edit"></i>
                                </a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

