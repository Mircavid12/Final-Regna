@model Portfolio
@{
    ViewData["Title"] = "Delete";
}

<div class="col-lg-12">
    <img src="~/images/portfolio/@Model.PortfolioImages.ElementAt(0).Name" width="400" />
</div>

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h2>Project Name: </h2>
            <h4 class="card-title">@Model.Name</h4>
        </div>
    </div>

</div>
<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h2>Porject Description: </h2>
            <h4 class="card-title">@Model.PortfolioDetails.Description</h4>
        </div>
    </div>

</div>
<h3 class="text-danger">Are you sure?</h3>
<form method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
</form>
<a asp-action="Index" class="btn btn-secondary mt-3">Go Back</a>