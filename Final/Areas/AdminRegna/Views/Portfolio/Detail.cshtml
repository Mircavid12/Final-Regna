@model Portfolio
@{
    ViewData["Title"] = "Detail";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="col-lg-12">
                <img src="~/images/portfolio/@Model.PortfolioImages.ElementAt(0).Name" width="400" />
            </div>
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Project Title: @Model.Name</h4>
                    <h4 class="card-title">Project Category: @Model.Category</h4>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">About Project: <br /><br /> @Model.PortfolioDetails.Description</h4>
                </div>
            </div>
            <div class="card mt-5" id="developers">
                <h3>Developers engaged in this Project</h3>
                <fieldset class="mt-3" name="developerId">



                    @foreach (Developers dv in ViewBag.GetDeveloper)
                    {
                        @foreach (PortfolioDevelopers sd in Model.PortfolioDevelopers)
                        {
                            if (dv.Id == sd.Developers.Id)
                            {

                                <h5>@dv.Name</h5>}
                        }
                    }
                </fieldset>
            </div>
        </div>
    </div>

</div>
<a asp-action="Index" class="btn btn-secondary">Go Back</a>



