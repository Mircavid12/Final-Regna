@model Portfolio
@{
    ViewData["Title"] = "Create";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create Project</h4>
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="@Model.Name">Project Name</label>
                    <input asp-for="@Model.Name" class="form-control" placeholder="Name">
                    <span class="text-danger" asp-validation-for="@Model.Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Category">Project Category</label>
                    <input asp-for="@Model.Category" class="form-control" placeholder="Category">
                    <span class="text-danger" asp-validation-for="@Model.Category"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Folder">Project Folder</label>
                    <input asp-for="@Model.Folder" class="form-control" placeholder="Folder">
                    <span class="text-danger" asp-validation-for="@Model.Folder"></span>
                </div>
                <div class="form-group d-inline-block">
                    <label asp-for="@Model.PortfolioDetails.Description">Project Description</label>
                    <input asp-for="@Model.PortfolioDetails.Description" class="form-control" placeholder="Description">
                    <span class="text-danger" asp-validation-for="@Model.PortfolioDetails.Description"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Photos"></label>
                    <input asp-for="@Model.Photos" class="form-control" placeholder="Select Photo">
                    <span class="text-danger" asp-validation-for="@Model.Photos"></span>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Create</button>
                <a class="btn btn-light" asp-action="Index">Cancel</a>
            </form>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_Validation" />
}

