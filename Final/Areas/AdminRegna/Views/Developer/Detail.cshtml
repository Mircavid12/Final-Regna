@model Developers
@{
    ViewData["Title"] = "Detail";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="col-lg-12">
                <img src="~/images/team/@Model.Image" width="400" />
            </div>
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Developer Name: @Model.Name</h4>
                    <h4 class="card-title">Developer Position: @Model.Profession</h4>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">About Developer: <br /><br /> @Model.developerDetails.Description</h4>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Degree: @Model.developerDetails.Degree</h4>
                    <h4 class="card-title"> Experience: @Model.developerDetails.experience</h4>
                    <h4 class="card-title"> Hobbies: @Model.developerDetails.hobbies</h4>
                    <h4 class="card-title"> Faculty: @Model.developerDetails.faculty</h4>
                </div>
            </div>
        </div>
    </div>

</div>
<a asp-action="Index" class="btn btn-secondary">Go Back</a>


