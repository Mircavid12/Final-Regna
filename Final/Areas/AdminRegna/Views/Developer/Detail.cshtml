@model Developers
@{
    ViewData["Title"] = "Detail";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body text-center">
            <div class="col-lg-12">
                <img src="~/images/team/@Model.Image" width="400" />
            </div>
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title"><span class="text-success">Developer Name:</span>  @Model.Name</h4>
                    <h4 class="card-title"><span class="text-success">Developer Position:</span>  @Model.Profession</h4>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title"><span class="text-success">About Developer:</span> <br /><br /> @Model.developerDetails.Description</h4>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title"><span class="text-success">Degree:</span> @Model.developerDetails.Degree</h4>
                    <h4 class="card-title"><span class="text-success">Experience:</span>  @Model.developerDetails.experience</h4>
                    <h4 class="card-title"><span class="text-success">Hobbies:</span>  @Model.developerDetails.hobbies</h4>
                    <h4 class="card-title"><span class="text-success">Faculty:</span>  @Model.developerDetails.faculty</h4>
                </div>
            </div>
        </div>
    </div>

</div>
<a asp-action="Index" class="btn btn-secondary">Go Back</a>


