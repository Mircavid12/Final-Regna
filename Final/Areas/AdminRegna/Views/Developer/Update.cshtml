@model Developers
@{
    ViewData["Title"] = "Update";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Update Developer</h4>
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="@Model.Name">Developer Name</label>
                    <input asp-for="@Model.Name" class="form-control" placeholder="Name">
                    <span class="text-danger" asp-validation-for="@Model.Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Profession">Developer Position</label>
                    <input asp-for="@Model.Profession" class="form-control" placeholder="Position">
                    <span class="text-danger" asp-validation-for="@Model.Profession"></span>
                </div>
                <div class="form-group d-inline-block">
                    <label asp-for="@Model.developerDetails.Description">Developer About</label>
                    <input asp-for="@Model.developerDetails.Description" class="form-control" placeholder="About">
                    <span class="text-danger" asp-validation-for="@Model.developerDetails.Description"></span>
                </div>
                <div class="form-group d-inline-block">
                    <label asp-for="@Model.developerDetails.Degree">Teacher Degree</label>
                    <input asp-for="@Model.developerDetails.Degree" class="form-control" placeholder="Degree">
                    <span class="text-danger" asp-validation-for="@Model.developerDetails.Degree"></span>
                </div>
                <div class="form-group d-inline-block">
                    <label asp-for="@Model.developerDetails.experience">Developer Experience</label>
                    <input asp-for="@Model.developerDetails.experience" class="form-control" placeholder="Experience">
                    <span class="text-danger" asp-validation-for="@Model.developerDetails.experience"></span>
                </div>
                <div class="form-group d-inline-block">
                    <label asp-for="@Model.developerDetails.hobbies">Developer Hobbies</label>
                    <input asp-for="@Model.developerDetails.hobbies" class="form-control" placeholder="Hobbies">
                    <span class="text-danger" asp-validation-for="@Model.developerDetails.hobbies"></span>
                </div>
                <div class="form-group d-inline-block">
                    <label asp-for="@Model.developerDetails.faculty">Faculty</label>
                    <input asp-for="@Model.developerDetails.faculty" class="form-control" placeholder="Faculty">
                    <span class="text-danger" asp-validation-for="@Model.developerDetails.faculty"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Photo"></label>
                    <input asp-for="@Model.Photo" class="form-control" placeholder="Select Photo">
                    <span class="text-danger" asp-validation-for="@Model.Photo"></span>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Update</button>
                <a class="btn btn-light" asp-action="Index">Cancel</a>
            </form>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_Validation" />
}


