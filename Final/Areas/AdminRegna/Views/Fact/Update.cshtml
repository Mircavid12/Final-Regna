@model FactCounters
@{
    ViewData["Title"] = "Update";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Update Facts</h4>
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="@Model.Name">Fact Title</label>
                    <input asp-for="@Model.Name" class="form-control" placeholder="Name">
                    <span class="text-danger" asp-validation-for="@Model.Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Count">Fact Count</label>
                    <input asp-for="@Model.Count" class="form-control" placeholder="Count">
                    <span class="text-danger" asp-validation-for="@Model.Count"></span>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Update</button>
                <a class="btn btn-light" asp-action="Index">Cancel</a>
            </form>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_Validation" />
}



