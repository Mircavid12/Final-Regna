@model Contact
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Contact</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Address
                            </th>
                            <th>
                                Mail
                            </th>
                            <th>
                                Phone
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                @Model.Address
                            </td>
                            <td>
                                @Model.Mail
                            </td>
                            <td>
                                @Model.PhoneNumber
                            </td>
                            <td>
                                <a asp-controller="Contact" asp-action="Detail" asp-route-id="@Model.Id" class="btn btn-secondary">
                                    <i class="mdi mdi-information"></i>
                                </a>
                                <a asp-controller="Contact" asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning">
                                    <i class="mdi mdi-table-edit"></i>
                                </a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

