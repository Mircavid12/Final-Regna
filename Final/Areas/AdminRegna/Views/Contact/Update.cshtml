@model Contact
@{
    ViewData["Title"] = "Update";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Update Contact</h4>
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="@Model.Mail">Contact Mail</label>
                    <input asp-for="@Model.Mail" class="form-control" placeholder="Mail">
                    <span class="text-danger" asp-validation-for="@Model.Mail"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Address">Contact Address</label>
                    <input asp-for="@Model.Address" class="form-control" placeholder="Address">
                    <span class="text-danger" asp-validation-for="@Model.Address"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.PhoneNumber">Contact PhoneNumber</label>
                    <input asp-for="@Model.PhoneNumber" class="form-control" placeholder="PhoneNumber">
                    <span class="text-danger" asp-validation-for="@Model.PhoneNumber"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Photo"></label>
                    <input asp-for="@Model.Photo" class="form-control" placeholder="Select Photo">
                    <span class="text-danger" asp-validation-for="@Model.Photo"></span>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Update</button>
                <a class="btn btn-light" asp-action="Index">Cancel</a>
            </form>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_Validation" />
}




