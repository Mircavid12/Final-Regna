@model List<AboutDetail>
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">About Detail</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Title
                            </th>
                            <th>
                                Description
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        
                            @foreach (AboutDetail item in Model)
                            {
                             <tr>
                                
                                <td>
                                    @item.Title
                                </td>
                                <td>
                                    @item.Description
                                </td>
                                <td>
                                    <a asp-controller="AboutDetail" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-secondary">
                                        <i class="mdi mdi-information"></i>
                                    </a>
                                    <a asp-controller="AboutDetail" asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">
                                        <i class="mdi mdi-table-edit"></i>
                                    </a>
                                </td>
                              </tr>
                            }

                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


