@model Services
@{
    ViewData["Title"] = "Detail";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="col-lg-12">
                <img src="~/images/service/@Model.ServiceDetails.Image" width="400" />
            </div>
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Service Title: @Model.Title</h4>
                    <h4 class="card-title">Service Description: @Model.Description</h4>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">About Service: <br /><br /> @Model.ServiceDetails.Description</h4>
                </div>
            </div>
            <div class="card mt-5" id="developers">
                <h3>Developers engaged in this service</h3>
                <fieldset class="mt-3" name="developerId">



                    @foreach (Developers dv in ViewBag.GetDeveloper)
                    {
                        @foreach (ServiceDevelopers sd in Model.ServiceDevelopers)
                        {
                            if (dv.Id == sd.Developers.Id)
                            {

                                <h5>@dv.Name</h5>}
                        }
                    }
                </fieldset>
            </div>
        </div>
    </div>

</div>
<a asp-action="Index" class="btn btn-secondary">Go Back</a>



