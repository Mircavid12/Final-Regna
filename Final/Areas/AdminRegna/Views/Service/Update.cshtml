@model Services
@{
    ViewData["Title"] = "Update";
    
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Update Service</h4>
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="@Model.Title">Service Title</label>
                    <input asp-for="@Model.Title" class="form-control" placeholder="Name">
                    <span class="text-danger" asp-validation-for="@Model.Title"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Description">Service Description</label>
                    <input asp-for="@Model.Description" class="form-control" placeholder="Description">
                    <span class="text-danger" asp-validation-for="@Model.Description"></span>
                </div>
                <div class="form-group d-inline-block">
                    <label asp-for="@Model.ServiceDetails.Description">Service About</label>
                    <input asp-for="@Model.ServiceDetails.Description" class="form-control" placeholder="About">
                    <span class="text-danger" asp-validation-for="@Model.ServiceDetails.Description"></span>
                </div>
                <div class="form-group d-inline-block">
                    <label asp-for="@Model.Icon">Service Icon</label>
                    <input asp-for="@Model.Icon" class="form-control" placeholder="Icon">
                    <span class="text-danger" asp-validation-for="@Model.Icon"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.ServiceDetails.Photo"></label>
                    <input asp-for="@Model.ServiceDetails.Photo" class="form-control" placeholder="Select Photo">
                    <span class="text-danger" asp-validation-for="@Model.ServiceDetails.Photo"></span>
                </div>
                <div class="form-group" id="developers">
                    <fieldset name="developerId">



                        @foreach (Developers dv in ViewBag.GetDeveloper)
                        {
                            @foreach (ServiceDevelopers sd in Model.ServiceDevelopers)
                            {
                                if (dv.Id == sd.Developers.Id)
                                {

                        <h5>@dv.Name</h5>                                }
                            }
                        }
                    </fieldset>
                </div>
                <h2>Add Developers</h2>
                <div class="form-group" id="developers">
                    <fieldset name="developerId">



                        @foreach (Developers dv in ViewBag.GetDeveloper)
                        {
                                    <input type="checkbox"  name="developerId" value="@dv.Id" /><label class="ml-4" for="track">  @dv.Name</label><br />
                                
                        }
                    </fieldset>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Update</button>
                <a class="btn btn-light" asp-action="Index">Cancel</a>
            </form>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_Validation" />
}

